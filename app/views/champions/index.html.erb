      <div class="row">
        <!-- Single Product -->
          <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="cards-list">
              <% @champions.each_with_index do |champion,index| %>
                <% if @champions[index*4] != nil %>
                  <div class="card 1">
                    <% if index == 0 %>
                      <%= link_to (image_tag "https://ddragon.leagueoflegends.com/cdn/12.23.1/img/champion/#{Champion.find(index+1).image['full']}"), champion_path(champion.id), class:"card_image" %>
