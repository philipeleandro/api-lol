
<body class="body_home">
  <section class="section-products">
      <div class="container">
          <div class="row justify-content-center text-center">
              <div class="col-md-8 col-lg-6">
                  <div class="title-champions">
                      <h3>Lista de Campe√µes</h3>
                  </div>
              </div>
          </div>
          <div class="row">
              <!-- Single Product -->
              <div class="col-md-6 col-lg-4 col-xl-3">
                <div id="product-1" class="single-product">
                  <% @champions.each_with_index do |champion,index| %>
                    <% if @champions[index*4] != nil %>
                      <div class="part-1">
                        <% if index == 0 %>
                          <div class="card">
                            <%= image_tag "https://ddragon.leagueoflegends.com/cdn/12.23.1/img/champion/#{Champion.find(index+1).image['full']}" %>
                          </div>
                        <% else %>
                          <div class="card">
                            <%= image_tag "https://ddragon.leagueoflegends.com/cdn/12.23.1/img/champion/#{Champion.find((index*4)+1).image['full']}" %>
                          </div>
                        <% end %>
                      </div>
                      <div class="part-2">
                        <h3 class="product-title">
                          <% if index == 0 %>
                            <%= link_to champion.name, champion_path(champion.id) %>
                          <% else %>
                            <%= link_to @champions[index*4].name, champion_path(@champions[index*4].id)  %>
                          <% end %>
                        </h3>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
