                    <% end %>
                    <div class="card_title title-white">
                      <% if index == 0 %>
                        <p><%= champion.name %></p>
                      <% else %>
                        <p><%= @champions[index*4].name %></p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
